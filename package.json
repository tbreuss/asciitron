{
  "name": "asciitron",
  "productName": "Asciitron",
  "description": "Simple Asciidoctor Editor built with Electron and Asciidoctor.js",
  "version": "0.1.0",
  "author": "Thomas Breuss",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build",
    "postinstall": "install-app-deps",
    "package-mac": "electron-packager . --overwrite --asar=true --platform=darwin --arch=x64 --icon=src/assets/icons/icon.icns --prune=true --ignore=bower_components --out=dist/packager/",
    "package-win": "electron-packager . --overwrite --asar=true --platform=win32 --arch=ia32 --prune=true --out=dist/packager --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Asciitron\"",
    "package-linux": "electron-packager . --overwrite --asar=true --platform=linux --arch=x64 --prune=true --out=dist/packager"
  },
  "build": {
    "asar": true,
    "appId": "ch.tebe.asciitron",
    "directories": {
      "buildResources": "src/assets/icons",
      "output": "dist/builder"
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "repository": {
    "tpye": "git",
    "url": "https://github.com/tbreuss/asciitron"
  },
  "keywords": [
    "Asciidoctor",
    "Cross Platform",
    "Editor",
    "Electron"
  ],
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^7.2.4",
    "electron-builder": "^14.5.3",
    "electron-packager": "^8.7.2"
  },
  "dependencies": {}
}
